<odoo>
    <record id="view_users_form_simple_modif_chatter_position" model="ir.ui.view">
        <field name="name">view.users.form.simple.modif.chatter.position</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences']/group" position="after">
                <group>
                    <group>
                        <label for="chatter_position" string="Chatter Position"/>
                        <field name="chatter_position" nolabel="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>